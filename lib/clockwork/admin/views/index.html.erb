<!doctype html>
<html lang="en" ng-app="clockworkAdminApp">
<head>
  <meta charset="utf-8">
  <title>Clockwork Admin</title>
  <base href="<%= base_url %>">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.css">
  <link rel="stylesheet" href="css/app.css">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-resource.js"></script>
  <script src="js/app.js"></script>
  <script src="js/controllers.js"></script>
  <script src="js/services.js"></script>
</head>
<body ng-controller="EventListCtrl">
  <table>
    <tr>
      <th>Event Name</th>
      <th>Last Execution Time</th>
      <th>Paused?</th>
    </tr>
    <tr ng-repeat="event in events">
      <td>{{event.event_name}}</td>
      <td class="datetime">{{event.last}}</td>
      <td ng-click="togglePaused(event)">{{event.paused}}</td>
    </tr>
  </table>
</body>
</html>

